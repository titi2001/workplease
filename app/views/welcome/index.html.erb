<html>
<head>
  <script>
    function ugh(){
      var a = document.getElementById("a").value
      var b = document.getElementById("b").value
      var c = document.getElementById("a").value
      var d = b*b - 4*a*c
      if(d > 0){
        document.getElementById('idk').innerHTML = "x1:" + ((-b + Math.sqrt(d))/2*a) + " x2: " + ((-b - Math.sqrt(d))/2*a);
      }
      else if (d ==0) {
        document.getElementById('idk').innerHTML = "x1:" + (-b/2*a);
      }
      else{
        document.getElementById('idk').innerHTML = "No solution";
      }
    }</script></head>
<body>
  <form style="text-align: center;">
    a:
    <input type="text" name="a" id="a">
    b:
    <input type="text" name="b" id = "b">
    c:
    <input type="text" name="c" id = "c">
    <br>
    <button type="button" id = "bt" onclick="ugh()">Calculate!</button>
    <p id = "idk"></p>
  </form>
</body></html>
